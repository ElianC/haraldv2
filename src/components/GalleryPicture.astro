---
import { Image } from 'astro:assets'

const { imgSrc, alt } = Astro.props

const images = import.meta.glob('../assets/uploads/*', {
  import: 'default',
})

const image = await images[`../assets${imgSrc}`]()
---

{
  image && (
    <Image
      src={image as ImageMetadata}
      alt={alt}
      class="w-full h-auto sm:h-[30svh] sm:w-auto sm:min-h-80"
      densities={[1.5, 2]}
    />
  )
}
