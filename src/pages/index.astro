---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro'
import GalleryPicture from "../components/GalleryPicture.astro";
const pictures = await getCollection("pictures");
---

<Layout title="John Doe">
  <main>

    <div class="grid">
      <div class="col-start-1 row-start-1 z-10">
        <h1 class="text-4xl text-white">John Doe Personnal Website</h1>
      </div>

      <video
        loop
        autoplay
        muted
        class="aspect-video col-start-1 row-start-1 w-full h-full object-cover"
        src="https://res.cloudinary.com/dw6nin1do/video/upload/v1695306239/HARALD_DUPLOUIS_-_DIRECTOR_OF_PHOTOGRAPHY_-_SHOWREEL_mmyjwu.mp4"
      />


    </div>

    </div>
    <div class="p-8">
      <h2 class="text-3xl">Mes derni√®res Photos</h2>
        <div class="flex flex-wrap justify-evenly gap-x-4 gap-y-12">
          {pictures.map((picture) => (
            <GalleryPicture
              imgSrc={picture.data.imgSrc}
              alt={picture.data.alt}
            />
          ))}
        </div>
      </div>
  </main>
</Layout>
